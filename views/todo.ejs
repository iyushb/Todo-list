<%- include ("./partials/header.ejs") %>

<div class="container">
    <h1>TO-DO LIST<i class="fa fa-angle-double-up"></i></h1>
    <form action="/todo" method="POST">
        <input type="text" name="todo[list]" placeholder="Add New TODO" required>
    </form>
    <ul id="list-ul">
        <%todo.todos.forEach(function(items){%>
        <li data-aos='zoom-in' id="list-li">
            <form id="delete_form" action="todo/<%=items._id%>?_method=DELETE" method="POST">
                <span><button id="deleter"><i style="font-size:24px" class="fa fa-scissors"></i></button></span>
            </form>
            <%=items.list%>
        </li>
        <%})%>
    </ul>
</div>

<%- include ("./partials/footer.ejs") %>